            console.log("3");

            fetch(`/shop?minPrice=${minPrice}&maxPrice=${maxPrice}`)
                .then((response) => response.json())
                .then((filteredProducts) => {
                    // Update the product list on the front end with the filtered data
                    updateProductList(filteredProducts);
                });

            console.log("4");
        });
    });
</script>


