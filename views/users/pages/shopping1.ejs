        } else {
            // If no products match the filter, display a message
            productListContainer.innerHTML = "<h2>No Products found</h2>";
        }
    }

    $(document).ready(function () {
        // Input fields for minimum and maximum price
        var minPriceInput = $('#min-price');
        var maxPriceInput = $('#max-price');

        // Add an event listener for the "Filter" button
        $("#filter-button").on("click", function () {
            console.log("inside the price filtering frontend");
            const minPrice = minPriceInput.val();
            const maxPrice = maxPriceInput.val();

            console.log("Min Price: ₹" + minPrice);
            console.log("Max Price: ₹" + maxPrice);

            // Now you can use the 'minPrice' and 'maxPrice' for filtering your product data
