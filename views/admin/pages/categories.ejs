<nav class="navbar navbar-expand-lg navbar-light bg-light"></nav>


<a href="/admin/addCategory"><button class="btn btn-primary  float-right">AddCategory</button></a>
<!-- Page Content -->
<div class="container mt-4">
    <h1>Category Management</h1>
<br>
    <div class="col-search ml-4 mb-2">
        <form class="searchform" action="/admin/category/search" method="post">
            <div class="input-group">
                <input list="search_terms" type="text" class="form-control" name="search" placeholder="Search a category">
                <button type="submit" class="btn btn-light bg"  > <i class="material-icons md-search"></i></button>
            </div>
        </form>
    </div>
    <br>
    <!-- Category Table -->
    <!-- <table class="table" id="examples"> -->
    <div class="card mb-4">

        <table style="width: 100%;" id="examples" class="table table-striped table-bordered table-sm" cellspacing="0"
        width="100%">
        <thead>
            <tr>
                <th  class="th-sm">ID</th>
                <th  class="th-sm">Name</th>
                <th >List/unList</th>
                <th  class="th-sm">Actions</th>
            </tr>
        </thead>
        <tbody>
       
                <% if (catList?.length>0) { %>
              
                <% for( let i = 0; i < catList.length; i++ ) { %>
                
                    <tr>
                    <td> <%-  i+1 %> </td>
                    <td> <%- catList[i].categoryName %> </td>
                    <td>
                    <% if (catList[i].isListed) { %>

                            <a href="/admin/category/unList/<%- catList[i]?._id %>">
                                <button type="submit" class="btn btn-danger btn-sm unblock-button">unList</button>
                            </a>
                            
                     
                        <% } else { %>
                            <a href="/admin/category/list/<%- catList[i]?._id %>">
                                <button type="submit" class="btn btn-success btn-sm unblock-button">list</button>
                            </a>
                            <% } %>
                     </td>
                  <td>
                        <div class="d-flex justify-content-even">
                            <a href="/admin/editCategory/<%- catList[i]._id %>">
                                <button class="btn btn-info btn-sm"><i class="material-icons md-edit pb-1"></i></button>
                            </a>
                          
                        </div>
                    </td>
                    
                   
                        </tr>
                        
                        <% } %>

                        
                        <% } else { %>
                            <h2>NO CATOGERIES FOUND</h2>
                            <% } %>
                         
                            
                        </tbody>
                    </table>
                </div>

<script>
    
    $(document).ready(function () {
        new DataTable('#examples');

    })

</script>